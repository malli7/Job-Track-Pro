generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Application {
  id          Int      @id @default(autoincrement())
  company     String?
  jobTitle    String?
  link        String?
  jobLocation String?
  status      String   @default("applied")
  appliedAt   DateTime @default(now())

}